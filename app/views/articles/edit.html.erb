<div class="row mb-4">
  <div class="col-12 col-md-6">
    <%= render partial: 'articles/breadcrumbs', locals: { last_title: 'Edit' } %>
  </div>

  <div class="col-12 col-md-6 mt-2 mt-md-0">
    <%= link_to article_path(@article), class: "btn btn-outline-success btn-sm float-md-right" do %>
