<div class="card mb-3">
  <h5 class="card-header">
    <%= link_to article_path(article), class: 'text-dark' do %>
      <%= article.title %>
    <% end %>
  </h5>

  <div class="card-body">
    <label class="font-weight-bolder">Description</label>
    <p class="card-text"><%= article.description %></p>

    <label class="font-weight-bolder">GUID</label>
    <p class="card-text"><%= article.guid %></p>

    <p class="card-text">
      <%= link_to article.channel.title, channel_path(article.channel) %>
    </p>

    <%= link_to edit_article_path(article), class: 'btn btn-outline-info btn-sm' do %>
      <i class="fas fa-pen mr-1"></i>
      Edit
    <% end %>

    <%= link_to article, method: :delete, data: { confirm: 'Are you sure?' },
        class: 'btn btn-outline-danger btn-sm' do %>

      <i class="fas fa-trash mr-1"></i>
      Delete
    <% end %>
  </div>
</div>
